function [xt]=tendencia_linear(coef,b,amostras,snr);
%coef: coeficiente da reta
%b: bias
%amostras
%relacao sinal ruido

for i=1:amostras
    ruido(i)=(randn(1)*snr);
end
RMS_ruido=sqrt((sum(ruido.*ruido))/amostras);

for i=1:amostras
    xt(i)=coef*i+b;
end
RMS_sinal=sqrt((sum(xt.*xt))/amostras);
desvio=std(ruido);

SNR=RMS_sinal/RMS_ruido;
xt=xt+ruido;

%xt=xt./max(xt);

[SN] = snr(xt,ruido);